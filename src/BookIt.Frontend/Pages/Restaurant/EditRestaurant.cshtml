@page "/restaurant/edit/{id:Guid}"
@model BookIt.Frontend.Pages.Restaurant.EditRestaurantModel
@{
    ViewData["Title"] = "Edit restaurant";
}

<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
        <h1>@ViewData["Title"]</h1>
        </div>
        <div>
            <form id="editRestaurantForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="EditRestaurant.RestaurantName" class="form-control" aria-required="true" />
                <label asp-for="EditRestaurant.RestaurantName"></label>
                <span asp-validation-for="EditRestaurant.RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EditRestaurant.RestaurantOwner" class="form-control" aria-required="true" />
                <label asp-for="EditRestaurant.RestaurantOwner"></label>
                <span asp-validation-for="EditRestaurant.RestaurantOwner" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EditRestaurant.City" class="form-control" aria-required="true" />
                <label asp-for="EditRestaurant.City"></label>
                <span asp-validation-for="EditRestaurant.City" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EditRestaurant.Address" class="form-control" aria-required="true" />
                <label asp-for="EditRestaurant.Address"></label>
                <span asp-validation-for="EditRestaurant.Address" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for = "EditRestaurant.ManagerId" class="form-control">
                    @foreach (var manager in Model.Managers)
                    {
                        <option value="@manager.Id" selected="@(manager.Id.ToString()==Model.EditRestaurant.ManagerId?true:false)">@manager.UserName</option>
                    }
                </select>
                <label asp-for="EditRestaurant.ManagerId"></label>
                </div>
                <div class="form-floating align-items-center justify-content-center mt-2">
                    <button asp-page-handler="edit" class="btn btn-outline-success col-5">
                        <i class="bi bi-person-fill-check"></i>
                    </button>
                    <button asp-page-handler="delete" class="btn btn-outline-danger col-5"
                    runat="server" CausesValidation="False"
                    onclick="return confirm('Are you certain you want to delete this restaurant?');">
                        <i class="bi bi-trash3-fill"></i>
                    </button>
                </div>
            </form>
            @if (ViewData["Message"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewData["Message"]");
                    };
                </script>
            }
        </div>  
    </div>
</div>
<a asp-area="" asp-page="/Restaurant/ViewAllRestaurants" class="btn btn-primary" aria-current="page">
    <i class="fas fa-utensils"></i> Restaurants
</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
