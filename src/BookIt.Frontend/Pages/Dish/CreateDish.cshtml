@page
@using BookIt.Core.Enums;
@model BookIt.Frontend.Pages.Dish.CreateDishModel
@{
    ViewData["Title"] = "Create dish";
}

<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
            <h1>@ViewData["Title"]</h1>
        </div>
        <div>
            <form id="createDishForm" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="NewDish.DishName" class="form-control" aria-required="true" />
                    <label asp-for="NewDish.DishName"></label>
                    <span asp-validation-for="NewDish.DishName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="NewDish.DishDescription" class="form-control" aria-required="true" />
                    <label asp-for="NewDish.DishDescription"></label>
                    <span asp-validation-for="NewDish.DishDescription" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <select asp-for="NewDish.Category" class="form-control">
                        <option disabled selected>Select dish category</option>
                        @foreach (var area in (DishCategory[])Enum.GetValues(typeof(DishCategory)))
                        {
                            <option value="@area.ToString()">@area.ToString()</option>
                        }
                    </select>
                    <label asp-for="NewDish.Category"></label>
                </div>
                <button id="createDishSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create dish</button>
            </form>
            @if (ViewData["Message"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewData["Message"]");
                    };
                </script>
            }
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
