@page
@model BookIt.Frontend.Pages.RestaurantDish.CreateRestaurantDishModel
@{
    ViewData["Title"] = "Add dish to meni";
}
<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
        <h1>@ViewData["Title"]</h1>
        <h4></h4>
        </div>
        <div>
            <form id="createRestaurantForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="NewRestaurant.RestaurantName" class="form-control" aria-required="true" />
                <label asp-for="NewRestaurant.RestaurantName"></label>
                <span asp-validation-for="NewRestaurant.RestaurantName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="NewRestaurant.RestaurantOwner" class="form-control" aria-required="true" />
                <label asp-for="NewRestaurant.RestaurantOwner"></label>
                <span asp-validation-for="NewRestaurant.RestaurantOwner" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="NewRestaurant.City" class="form-control" aria-required="true" />
                <label asp-for="NewRestaurant.City"></label>
                <span asp-validation-for="NewRestaurant.City" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="NewRestaurant.Address" class="form-control" aria-required="true" />
                <label asp-for="NewRestaurant.Address"></label>
                <span asp-validation-for="NewRestaurant.Address" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for = "NewRestaurant.ManagerId" class="form-control">
                    <option disabled selected>Select a manager</option>
                    @foreach (var manager in Model.Managers)
                    {
                        <option value="@manager.Id">@manager.UserName</option>
                    }
                </select>
                <label asp-for="NewRestaurant.ManagerId"></label>
                </div>
            <button id="createRestaurantSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create restaurant</button>
            </form>
            @if (ViewData["Message"] != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewData["Message"]");
                    };
                </script>
            }
        </div>  
    </div>
</div>
<a asp-area="" asp-page="/Restaurant/ViewAllRestaurants" class="btn btn-primary" aria-current="page">
    <i class="fas fa-utensils"></i> Restaurants
</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
