@page "/tables/edit/{id:Guid}"
@using BookIt.Core.Enums
@model BookIt.Frontend.Pages.Tables.EditTableModel
@{
    ViewData["Title"] = "Edit table";
}

<div class="container text-center d-flex align-items-center justify-content-center">
    <div>
        <div>
        <h1>@ViewData["Title"]</h1>
        <h5>Table: @ViewData["TableName"]</h5>
        <h5>Restaurant: @ViewData["RestaurantName"]</h5>
        </div>
        <div>
            <form id="editTableForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="EditTable.NumberOfSeats" class="form-control" aria-required="true" />
                <label asp-for="EditTable.NumberOfSeats"></label>
                <span asp-validation-for="EditTable.NumberOfSeats" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for = "EditTable.Area" class="form-control">
                    @foreach (var area in (TableArea[])Enum.GetValues(typeof(TableArea)))
                    {
                        <option value="@area.ToString()" selected="@(area.ToString()==Model.EditTable.Area?true:false)">@area.ToString()</option>
                    }
                </select>
                <label asp-for="EditTable.Area"></label>
            </div>
            <div class="form-floating">
                <select asp-for = "EditTable.Smoking" class="form-control">
                    @foreach (var smoking in (TableSmoking[])Enum.GetValues(typeof(TableSmoking)))
                    {
                        <option value="@smoking.ToString()" selected="@(smoking.ToString()==Model.EditTable.Area?true:false)">@smoking.ToString()</option>
                    }
                </select>
                <label asp-for="EditTable.Area"></label>
            </div>
            <div class="form-floating align-items-center justify-content-center mt-2">
                <button asp-page-handler="edit" class="btn btn-outline-success col-5">
                    Edit
                </button>
                <button asp-page-handler="delete" class="btn btn-outline-danger col-5"
                runat="server" CausesValidation="False"
                onclick="return confirm('Are you certain you want to delete this table?');">
                    Delete
                </button>
            </div>
            </form>
        </div>  
    </div>
</div>
<a class="btn btn-primary"  onclick="window.history.back()">
    Back <i class='fas fa-angle-left'></i>
</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


