@page "/users/all"
@model BookIt.Frontend.Pages.Users.ViewAllUsersModel
@{
}
<h1>All Users</h1>
<hr/>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>UserName</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Action</th>
        </tr>        
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.UserRole</td>
                <td><a asp-page="editUser" asp-route-id="@user.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
